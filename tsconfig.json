{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "types": [],

    "strict": true,
    "checkJs": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "lib": [
      "es2015",
      "dom",
      "es6",
      "es7",
      "es5"
    ],

    "outDir": "dist",

    "baseUrl": "./app",
    "paths": {
      "renderer/*": ["renderer/*"],
      "main/*": ["main/*"],
      "common/*": ["common/*"],
      "locales/*": ["locales/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
